[giggle]
	compact-mode = true
	main-window-maximized = true
	main-window-geometry = 0x0+0+0

[user]
	name = <your-name>
	email = <your-email>

[alias]
	co = checkout
	#ci = commit -a
	ci = commit
	st = status

[mirror]
	summary = true

[apply]
	whitespace = nowarn

[color]
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

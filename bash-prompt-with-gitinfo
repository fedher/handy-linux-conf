__git_branch ()
{
	local b="$(git symbolic-ref HEAD 2>/dev/null)";
	if [ -n "$b" ]; then
		printf "(%s) " "${b##refs/heads/}";
	fi
}

# This conf is for ubuntu.
PS1='${debian_chroot:+(debian_chroot)}\u@\h:\w \$ \[\033[0;33m\]$(__git_branch)\[\033[0m\]'

# For other distros.
#PS1='\u@\h:\w \$ \[\033[0;33m\]$(__git_branch)\[\033[0m\]'

